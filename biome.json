{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "security": {
        "noGlobalEval": "warn"
      },
      "complexity": {
        "noUselessCatch": "error",
        "noUselessSwitchCase": "error",
        "useSimplifiedLogicExpression": "warn"
      },
      "correctness": {
        "noConstAssign": "error"
      },
      "nursery": {
        "noSecrets": "error"
      },
      "style": {
        "noUselessElse": "error",
        "noVar": "error",
        "useConst": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
